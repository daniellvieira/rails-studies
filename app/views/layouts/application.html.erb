<!DOCTYPE html>
<html>
  <head>
    <title>Rails Studies</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <%= AssetRam::Helper.cache { stylesheet_link_tag "https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" } %>
  </head>

  <body>[
    <div class="container">
      <%= AssetRam::Helper.cache { render 'shared/topbar' } %>
      <%= yield %>
      <%= AssetRam::Helper.cache { render 'shared/footer' } %>
    </div>
    <%= AssetRam::Helper.cache { javascript_include_tag "https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" } %>
  </body>
</html>
