<p style="color: green"><%= notice %></p>

<h1>Posts</h1>

<%= turbo_stream_from 'ahoy_events' %>
<%= render 'monitoring/chart', events: @events  %>
<hr>
<div id="posts">
  <% @posts.each do |post| %>
    <%= render post %>
    <p>
      <%= link_to "Show this post", post %>
    </p>
  <% end %>
</div>

<%= link_to "New post", new_post_path %>
